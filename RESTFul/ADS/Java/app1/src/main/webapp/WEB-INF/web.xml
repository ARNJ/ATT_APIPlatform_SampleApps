<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>ads</display-name>
  <welcome-file-list>
    <welcome-file>ADS.jsp</welcome-file>
  </welcome-file-list>
  <display-name>AT&amp;T ADS Sample Application</display-name>


  <servlet>
    <servlet-name>ADSController</servlet-name>
    <servlet-class>com.att.api.ads.controller.ADSController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>LoadController</servlet-name>
      <servlet-class>com.att.api.ads.controller.LoadController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>SaveController</servlet-name>
      <servlet-class>com.att.api.ads.controller.SaveController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>GetAdsController</servlet-name>
      <servlet-class>com.att.api.ads.controller.GetAdsController</servlet-class>
  </servlet>


  <servlet-mapping>
      <servlet-name>LoadController</servlet-name>
      <url-pattern>/load</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>SaveController</servlet-name>
      <url-pattern>/save</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ADSController</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ADSController</servlet-name>
    <url-pattern>/ADS.jsp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ADSController</servlet-name>
    <url-pattern>/ads.jsp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAdsController</servlet-name>
    <url-pattern>/getAds</url-pattern> 
  </servlet-mapping>
</web-app>
