<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <display-name>AT&amp;T Sample Application - Text to Speech</display-name>

  <welcome-file-list>
    <welcome-file>tts.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>TtsController</servlet-name>
    <servlet-class>com.att.api.speech.controller.TtsController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>LoadController</servlet-name>
      <servlet-class>com.att.api.speech.controller.LoadController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>SaveController</servlet-name>
      <servlet-class>com.att.api.speech.controller.SaveController</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>TextToSpeechController</servlet-name>
      <servlet-class>com.att.api.speech.controller.TextToSpeechController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TtsController</servlet-name>
    <url-pattern>/SpeechAction</url-pattern> 
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TtsController</servlet-name>
    <url-pattern>/index.jsp</url-pattern> 
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TtsController</servlet-name>
    <url-pattern>/tts.jsp</url-pattern> 
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TtsController</servlet-name>
    <url-pattern>/Speech.jsp</url-pattern> 
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>LoadController</servlet-name>
      <url-pattern>/load</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>SaveController</servlet-name>
      <url-pattern>/save</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>TextToSpeechController</servlet-name>
      <url-pattern>/textToSpeech</url-pattern>
  </servlet-mapping>
</web-app>
